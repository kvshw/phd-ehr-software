# Production Environment Variables
# Copy this to .env.prod and fill in your values

# =============================================================================
# DATABASE (Supabase)
# =============================================================================
# Get from: Supabase Dashboard → Settings → Database → Connection string
DATABASE_URL=postgresql://postgres.xxxx:YOUR_PASSWORD@aws-0-region.pooler.supabase.com:6543/postgres

# Supabase API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# SECURITY (CHANGE THESE!)
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS

# =============================================================================
# API URLs
# =============================================================================
# Your production domain
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# CORS - Add your domain(s)
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# =============================================================================
# AI MODEL SERVICES (Internal Docker Network)
# =============================================================================
VITAL_RISK_SERVICE_URL=http://vital-risk-service:8001
IMAGE_ANALYSIS_SERVICE_URL=http://image-analysis-service:8002
DIAGNOSIS_HELPER_SERVICE_URL=http://diagnosis-helper-service:8003

# =============================================================================
# OPTIONAL: MinIO/S3 for Image Storage
# =============================================================================
# MINIO_ENDPOINT=your-minio-endpoint
# MINIO_ACCESS_KEY=your-access-key
# MINIO_SECRET_KEY=your-secret-key
# MINIO_BUCKET_NAME=ehr-images

# =============================================================================
# OPTIONAL: AI Model Configuration
# =============================================================================
USE_AI_MODEL=true
USE_ML_MODEL=true
USE_CNN_MODEL=false

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info

